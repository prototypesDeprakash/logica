     private static double workingsolution(int[]arr,int k){
        double sum=0;
        for(int i=0;i<k;i++){
            sum+=arr[i];

        }
        double maxsum=sum;
        for(int i=k;i<arr.length;i++){
            sum+=arr[i];
            sum-=arr[i-k];
            maxsum=Math.max(maxsum,sum);
        }
       return maxsum=maxsum/k;
     }


     this si an efficient template for sliding windoe